# importations de donnees
cm<-read.csv("CreditBancaire.csv")

# exlorer l'objet cm
str(cm)


# calculons la moyenne du credit
mean(cm$Credit)

#calculons la moyenne du nbre de jours par type de credit
attach(cm)
tapply(Jours,Type,mean)


# creation d'un objet pour le nbre de jours de retard par type
m<-tapply(Jours, Type, mean)
m

# graphe en batons
barplot(m)

#nommons le graphe
barplot(m,main="graphe en batons")
